<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="item_count" format="integer" />

    <declare-styleable name="ViewPagerIndicator">
        <attr name="item_count" />
    </declare-styleable>

    <attr name="threshold_count" format="integer" />
    <attr name="gridlinecolor" format="color" />
    <attr name="textcolor" format="color" />
    <attr name="indexTextSize" format="dimension" />
    <attr name="originCurveColor" format="color" />
    <attr name="realCurveColor" format="color" />
    <attr name="backgroundColor" format="color" />

    <declare-styleable name="DrcCurve">
        <attr name="threshold_count" />
        <attr name="gridlinecolor" />
        <attr name="textcolor" />
        <attr name="indexTextSize" />
        <attr name="originCurveColor" />
        <attr name="realCurveColor" />
        <attr name="backgroundColor" />
    </declare-styleable>


    <declare-styleable name="AccelerationProgress">
        <attr name="accBallRadius" format="dimension"></attr>
        <attr name="bigCircleStroke" format="dimension"></attr>
        <attr name="accBallBackground" format="color"></attr>
        <attr name="bigCircleBackground" format="color"></attr>
        <attr name="duration" format="integer"></attr>
        <attr name="timeTextSize" format="dimension"></attr>
    </declare-styleable>
    <declare-styleable name="SlidProgressbar">
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0"></enum>
            <enum name="vertical" value="1"></enum>
        </attr>
        <attr name="progressWidth" format="dimension"></attr>
        <attr name="progressHeight" format="dimension"></attr>
        <attr name="thumbRadius" format="dimension"></attr>
        <attr name="thumbTextSize" format="dimension"></attr>
        <attr name="thumbText" format="string"></attr>
    </declare-styleable>

    <declare-styleable name="ScaleViewPager">
        <attr name="marginLeftRight" format="dimension"></attr>
        <attr name="gutterSize" format="dimension"></attr>
    </declare-styleable>

    <declare-styleable name="RefreshProgress">
        <attr name="seekAble" format="boolean"></attr>
    </declare-styleable>

</resources>